<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/stylesheets/output.css">
</head>
<body>
  <div class="w-full min-h-screen bg-zinc-900 p-10" >
    <div class="flex justify-between  items-center">
      <div>
        <h3 class="text-white tracking-tighter text-4xl font-bold mb-5">Media</h3>
      </div>
      <div>
        <button class="w-[80px] bg-red-600 h-10 px-3 py-1 rounded-md text-white"><a href="/logout">Logout</a></button>
      </div>
    </div>
    <div class="div-post-container mt-3 flex flex-wrap gap-5 ">
      <% const postArray = [] %>   

      <% allPosts.forEach((post) => {  %>          
        <% postArray.push(post) %>
      <% }) %>

      <% postArray.sort((a, b) => new Date(b.date) - new Date(a.date)) %>

      
      <% postArray.forEach((post) => {  %>          
        <div class="div-post bg-zinc-700 p-3 w-80 rounded-md ">
          <div class="div-username text-blue-400">
            @<%= post.user.username %>
          </div>
          <div class="div-post-desc mt-2 text-white">
            <%= post.content%>
          </div>
          <div class="div-like-count mt-2 text-white">
            <%= post.likes.length%> likes
          </div>
          <div class="div-post-btn flex">
            <% if(post.likes.indexOf(loggedInUser._id) === -1) { %>
              <a class="like-btn text-blue-400 cursor-pointer" href="/like/add/<%= post._id%>">Like</a>
            <% } else{ %>
              <a class="like-btn text-blue-400 cursor-pointer" href="/like/remove/<%= post._id%>">Unlike</a>
            <% } %> 
          </div>  
        </div>
      <% }) %>

    </div>
  </div>
</body>
</html>